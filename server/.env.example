# SEGURANCA
JWT_SECRET=<your_strong_jwt_secret>
JWT_EXPIRES_IN=8h
ADMIN_INITIAL_PASSWORD=<define_a_strong_admin_password_for_seed>

# CONFIGURACAO
NODE_ENV=production
PORT=3001
CLIENT_URL=https://your-domain.vercel.app

# BANCO DE DADOS (MongoDB)
MONGODB_URI=<your_mongodb_connection_string>
MONGODB_DB_NAME=onionflow

# LOGS
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
HEARTBEAT_LAST_SEEN_MIN_MS=60000
DB_CHANGE_LOGGER_ENABLED=false

# WEBSOCKETS
SOCKET_CORS_ORIGIN=https://your-domain.vercel.app

# WHATSAPP CLOUD API
WHATSAPP_GRAPH_VERSION=v21.0
WHATSAPP_WEBHOOK_VERIFY_TOKEN=<your_whatsapp_webhook_verify_token>
WHATSAPP_APP_SECRET=<your_whatsapp_app_secret_optional>


